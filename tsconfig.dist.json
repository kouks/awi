{
  "compilerOptions": {
    "baseUrl": "src",
    "declaration": true,
    "declarationDir": "types",
    "lib": ["dom", "es6"],
    "module": "commonjs",
    "outDir": "build",
    "removeComments": false,
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    "paths": {
      "@/*": ["*"],
      "@": ["index.ts"]
    },
    "plugins": [
      { "transform": "@zerollup/ts-transform-paths" }
    ]
  },
  "include": [
    "src/**/*"
  ]
}
